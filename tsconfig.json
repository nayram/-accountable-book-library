{
  "compilerOptions": {
    "typeRoots": ["@types", "node_modules/@types"],
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@tests/*": ["__tests__/*"],
      "@resources/*": ["src/resources/*"],
      "@libs/*": ["src/libs/*"],
      "@api/*": ["src/apps/api/*"]
    }
  },
  "exclude": ["node_modules", "docker", "dist"]
}
